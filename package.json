    "html-to-text": "^4.0.0",
    "juice": "^4.2.3",
    "mongoose": "^5.0.7",
    "mongoose-mongodb-errors": "0.0.2",
    "nodemailer": "^4.6.2",
    "passport": "^0.4.0",
    "passport-local-mongoose": "^5.0.0",
